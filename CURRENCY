import java.util.Scanner;

public class CurrencyConverter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Available Currencies: USD, EUR, GBP, INR, JPY");
        System.out.print("Enter source currency (USD, EUR, GBP, INR, JPY): ");
        String fromCurrency = scanner.next().toUpperCase();
        
        System.out.print("Enter target currency (USD, EUR, GBP, INR, JPY): ");
        String toCurrency = scanner.next().toUpperCase();
        
        System.out.print("Enter amount: ");
        double amount = scanner.nextDouble();
        double convertedAmount = 0;

        // Conversion rates (assumed based on 1 USD)
        double usdToInr = 83.2, usdToEur = 0.91, usdToGbp = 0.78, usdToJpy = 149.5;

        // Convert source currency to USD
        if (fromCurrency.equals("USD")) convertedAmount = amount;
        else if (fromCurrency.equals("INR")) convertedAmount = amount / usdToInr;
        else if (fromCurrency.equals("EUR")) convertedAmount = amount / usdToEur;
        else if (fromCurrency.equals("GBP")) convertedAmount = amount / usdToGbp;
        else if (fromCurrency.equals("JPY")) convertedAmount = amount / usdToJpy;
        else {
            System.out.println("Invalid source currency!");
            scanner.close();
            return;
        }

        // Convert USD to target currency
        if (toCurrency.equals("USD")) convertedAmount = convertedAmount;
        else if (toCurrency.equals("INR")) convertedAmount *= usdToInr;
        else if (toCurrency.equals("EUR")) convertedAmount *= usdToEur;
        else if (toCurrency.equals("GBP")) convertedAmount *= usdToGbp;
        else if (toCurrency.equals("JPY")) convertedAmount *= usdToJpy;
        else {
            System.out.println("Invalid target currency!");
            scanner.close();
            return;
        }

        System.out.printf("%.2f %s = %.2f %s\n", amount, fromCurrency, convertedAmount, toCurrency);
        
        scanner.close();
    }
}
